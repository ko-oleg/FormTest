@model FormTest.Models.Form
@{
    ViewBag.Title = "Редактирование пользователя";
}
<form asp-action="edit" asp-controller="home" asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="Fullname" class="control-label">ФИО</label>
        <input type="text" asp-for="Fullname" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email" class="control-label">Почта</label>
        <input type="number" asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-default" />
    </div>
</form>